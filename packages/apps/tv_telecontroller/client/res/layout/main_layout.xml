<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/main_title_layout"
        layout="@layout/title_layout" />

    <RadioGroup
        android:id="@+id/main_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/first_page_radio"
            style="@style/RadioStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/home_icon_selector"
            android:background="@null"
            android:text="@string/first_page" />

        <RadioButton
            android:id="@+id/av_page_radio"
            style="@style/RadioStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/av_icon_selector"
            android:background="@null"
            android:text="@string/av" />

        <ImageButton
            android:id="@+id/change_image"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/meun_icon_selector" />

        <RadioButton
            android:id="@+id/game_page_radio"
            style="@style/RadioStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/game_icon_selector"
            android:text="@string/game" />

        <RadioButton
            android:id="@+id/bean_page_radio"
            style="@style/RadioStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/wodou_icon_selector"
            android:text="@string/bean" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_radio_group"
        android:layout_below="@id/main_title_layout" >
    </FrameLayout>

</RelativeLayout>