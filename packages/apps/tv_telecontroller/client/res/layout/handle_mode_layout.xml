<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/handle_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/handle_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:padding="10.0dip"
            android:src="@drawable/handle_back_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="@dimen/handle_height_width"
            android:layout_height="@dimen/handle_height_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:background="@drawable/handle_direction_bg" >

            <ImageView
                android:id="@+id/handle_ok_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/handle_ok_icon_selector" />

            <ImageView
                android:id="@+id/up_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:src="@drawable/handle_up_icon_selector" />

            <ImageView
                android:id="@+id/below_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10.0dip"
                android:src="@drawable/handle_below_icon_selector" />

            <ImageView
                android:id="@+id/left_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:src="@drawable/handle_left_icon_selector" />

            <ImageView
                android:id="@+id/right_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/handle_right_icon_selector" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/select_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/select_start_bg_selector"
                android:gravity="center"
                android:text="@string/select"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/start_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:drawableBottom="@drawable/select_start_bg_selector"
                android:gravity="center"
                android:text="@string/start" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/handle_height_width"
            android:layout_height="@dimen/handle_height_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip" >

            <ImageView
                android:id="@+id/y_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:src="@drawable/handle_y_icon_selector" />

            <ImageView
                android:id="@+id/a_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10.0dip"
                android:src="@drawable/handle_a_icon_selector" />
            
            <ImageView
                android:id="@+id/x_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/handle_x_icon_selector"
                android:layout_marginLeft="10.0dip"
                />
            
            <ImageView
                android:id="@+id/b_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/handle_b_icon_selector"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                />
            
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>